<div class="tws__show">
  <div class="px-4 sm:px-0">
    <h3 class="tws__show__title"><%= show_title(@resource) %></h3>
  </div>
  <div class="tws__show__content">
    <dl class="tws__show__content-divider">
    <% resource_show_attributes.each do |attr| %>
      <div class="tws__show__content__row">
        <dt class="tws__show__content__row__label"><%= attr.to_s.humanize %></dt>
        <dd class="tws__show__content__row__value"><%= @resource.send attr %></dd>
      </div>
    <% end %>
    </dl>
  </div>
</div>
