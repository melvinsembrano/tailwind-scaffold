<div class="tws__page">
  <div class="tws__show">
    <div class="border-b border-gray-200 pb-5 sm:flex sm:items-center sm:justify-between">
      <h3 class="text-base font-semibold leading-6 text-tw-900"><%= show_title(@resource) %></h3>
      <div class="mt-3 flex sm:ml-4 sm:mt-0">
        <%= link_to(resource_list_url, class: 'inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-tw-900 shadow-sm ring-1 ring-inset ring-tw-100 hover:bg-tw-50')  do %>
          < Back
        <% end %>
        <%= link_to('Edit', resource_edit_url(@resource), class: "ml-3 inline-flex items-center rounded-md bg-tw-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-tw-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-tw-600") %>
      </div>
    </div>

    <div class="tws__show__content">
      <dl class="tws__show__content-divider">
      <% resource_show_attributes.each do |attr| %>
        <div class="tws__show__content__row">
          <dt class="tws__show__content__row__label"><%= attr.to_s.humanize %></dt>
          <dd class="tws__show__content__row__value"><%= @resource.send attr %></dd>
        </div>
      <% end %>
      </dl>
    </div>
  </div>
</div>
