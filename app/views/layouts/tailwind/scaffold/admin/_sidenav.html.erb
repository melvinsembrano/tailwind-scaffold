        <li class="-mx-6 mt-auto">
          <a href="#" class="flex items-center gap-x-4 px-6 py-3 text-sm font-semibold leading-6 text-tw-900 hover:bg-tw-50">
            <img class="h-8 w-8 rounded-full bg-tw-50" src="<%= current_user(:avatar) %>" alt="">
            <span class="sr-only">Your profile</span>
            <span aria-hidden="true"><%= current_user(:name) %></span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
