<div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
  <div class="flex grow flex-col gap-y-5 overflow-y-auto border-r border-tw-200 bg-white px-6">
    <div class="flex h-16 shrink-0 items-center">
      <img class="h-6 w-auto" src="<%= app_logo %>">
    </div>
    <nav class="flex flex-1 flex-col">
      <ul role="list" class="flex flex-1 flex-col gap-y-7">
        <li>
          <ul role="list" class="-mx-2 space-y-1">
          <% navigations.each do |navigation| %>
            <li>
              <%= link_to navigation[:url], class: "group nav-item #{ current_page?(navigation[:url]) ? 'active' : 'default' }" do %>
                <% if navigation[:icon].present? %>
                  <%= render navigation[:icon], style: "icon" %>
                <% else %>
                  <%= render "layouts/tailwind/scaffold/admin/icons/default", style: "icon" %>
                <% end %>
                <%= navigation[:name] %>
              <% end %>
            </li>
          <% end %>
          </ul>
        </li>

